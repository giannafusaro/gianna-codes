<!DOCTYPE html>
<html>
<head>
  <title>GiannaCodes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-68419378-1', 'auto');
  ga('send', 'pageview');

  </script>
</head>
<body class="<%= "#{controller.controller_path.gsub('/', ' ')} #{controller.action_name}" %>">
  <nav>
    <div class="nav-container">
      <%= link_to home_path, class: 'nav-logo' do %>
        <%= inline_svg('gianna-codes-lightning-green.svg', class: "logo") %>
      <% end %>
      <% if current_admin %>
        <%= render partial: 'admin/navbar' %>
      <% else %>
        <%= render partial: 'site/navbar' %>
      <% end %>

    </div>
  </nav>

<%= yield %>

<footer>
  <div>
    <i class="fa fa-copyright"></i>
    <span><%= Time.now.year %></span>
    <span>gianna</span>
    <span>fusaro</span>
  </div>
</footer>
</body>
</html>
