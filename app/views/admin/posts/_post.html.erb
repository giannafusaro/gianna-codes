<article class="post">
  <div class="heading">
    <div id="img-container" class="img-container">
      <%= image_tag post.img_url, class: "post-img" %>
    </div>
    <h1><%= post.title %></h1>
    <h2><%= post.abstract %></h2>
  </div>

  <pre class="body"><%= markdown post.body %></pre>
</article>
