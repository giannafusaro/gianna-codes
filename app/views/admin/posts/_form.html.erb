<div class="header">
  <span class="label published"><%= f.label :published %></span>
  <span class="label position"><%= f.label :position %></span>

  <span class="input-container published"><%= f.check_box :published %></span>
  <span class="input-container position"><%= f.number_field :position %></span>

  <span class="label title"><%= f.label :title %></span>
	<span class="label img-url"><%= f.label :img_url %></span>

	<span class="input-container title"><%= f.text_field :title %></span>
  <span class="input-container img-url"><%= f.text_field :img_url %></span>

	<span class="label author"><%= f.label :author %></span>
	<span class="label date"><%= f.label :date %></span>

  <span class="input-container author"><%= f.text_field :author %></span>
  <span class="input-container date"><%= f.text_field :date %></span>

  <span class="label abstract"><%= f.label :abstract %></span>
  <span class="input-container abstract"><%= f.text_area :abstract, rows: 5 %></span>
</div>
<%= f.text_area :body, rows: 40, style: 'width: 90%;' %>
